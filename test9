-- üå± Grow a Garden Hatch Visual with Egg Data

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer

local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "HatchVisual"
gui.ResetOnSpawn = false

-- üê£ PET DATABASE BY EGG TYPE
local eggPets = {
    ["Common Egg"]     = {"Dog","Golden Lab","Bunny"},
    ["Uncommon Egg"]   = {"Black Bunny","Cat","Chicken","Deer"},
    ["Rare Egg"]       = {"Monkey","Orange Tabby","Pig","Rooster","Spotted Deer"},
    ["Legendary Egg"]  = {"Cow","Silver Monkey","Sea Otter","Turtle","Polar Bear"},
    ["Mythical Egg"]   = {"Grey Mouse","Brown Mouse","Squirrel","Red Giant Ant","Red Fox"},
    ["Bug Egg"]        = {"Snail","Giant Ant","Caterpillar","Praying Mantis","Dragonfly"},
    ["Bee Egg"]        = {"Bee","Honey Bee","Bear Bee","Petal Bee","Queen Bee"},
    ["Paradise Egg"]   = {"Ostrich","Peacock","Capybara","Scarlet Macaw","Mimic Octopus"},
    ["Oasis Egg"]      = {"Meerkat","Sand Snake","Axolotl","Hyacinth Macaw"},
    ["Dinosaur Egg"]   = {"Pterodactyl","Raptor","Triceratops","Stegosaurus","Brontosaurus","T-Rex"},
    ["Primal Egg"]     = {"Parasaurolophus","Iguanodon","Pachycephalosaurus","Dilophosaurus","Ankylosaurus","Spinosaurus"},
    ["Zen Egg"]        = {"Shiba Inu","Nihonzaru","Tanuki","Tanchozuru","Kappa","Kitsune"},
}

-- üß© IMAGE PLACEHOLDER MAPPING (fill with real IDs later)
local petImages = {
    ["Dog"] = "rbxassetid://123456",
    ["Golden Lab"] = "rbxassetid://123457",
    ["Bunny"] = "rbxassetid://123458",
    -- Add all pets here with actual image IDs
}

-- GUI Elements
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 300, 0, 300)
frame.Position = UDim2.new(0.5, -150, 0.5, -150)
frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.Visible = false

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 50)
title.Text = "üå± Hatching..."
title.Font = Enum.Font.GothamBold
title.TextSize = 28
title.BackgroundTransparency = 1
title.TextColor3 = Color3.new(1, 1, 1)

local image = Instance.new("ImageLabel", frame)
image.Size = UDim2.new(0, 150, 0, 150)
image.Position = UDim2.new(0.5, -75, 0.5, -75)
image.BackgroundTransparency = 1

local nameLabel = Instance.new("TextLabel", frame)
nameLabel.Position = UDim2.new(0, 0, 1, -60)
nameLabel.Size = UDim2.new(1, 0, 0, 40)
nameLabel.Font = Enum.Font.GothamBold
nameLabel.TextSize = 24
nameLabel.TextColor3 = Color3.new(1, 1, 1)
nameLabel.BackgroundTransparency = 1

local mutationLabel = Instance.new("TextLabel", frame)
mutationLabel.Position = UDim2.new(0, 0, 1, -30)
mutationLabel.Size = UDim2.new(1, 0, 0, 30)
mutationLabel.Font = Enum.Font.Gotham
mutationLabel.TextSize = 18
mutationLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
mutationLabel.BackgroundTransparency = 1

-- üëÅÔ∏è HATCH VISUAL FUNCTION
local function showHatch(eggType, isMutated)
    local petList = eggPets[eggType]
    if not petList then warn("Unknown egg type:", eggType) return end

    local petName = petList[math.random(1, #petList)]
    local petImage = petImages[petName] or "rbxassetid://0"

    image.Image = petImage
    nameLabel.Text = petName
    mutationLabel.Text = isMutated and "üî• Mutated!" or ""

    frame.Visible = true
    image.Rotation = 0

    local spin = TweenService:Create(image, TweenInfo.new(2, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1), {Rotation = 360})
    spin:Play()

    task.wait(2.5)
    spin:Cancel()
    task.wait(1)
    frame.Visible = false
end

-- üß™ Example hatch
task.wait(1)
showHatch("Bug Egg", math.random(1, 5) == 1)

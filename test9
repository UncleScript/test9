-- JADE HUB V3.1 GUI - Modified by Uncle Script

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "JadeHub"

-- Create Main Frame
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 500, 0, 250)
frame.Position = UDim2.new(0.3, 0, 0.3, 0)
frame.BackgroundColor3 = Color3.fromRGB(0, 85, 0)

-- Title
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundColor3 = Color3.fromRGB(0, 128, 0)
title.Text = "JADE HUB V3.1 - MADE BY Uncle Script."
title.TextColor3 = Color3.new(1,1,1)
title.TextSize = 22
title.Font = Enum.Font.SourceSansBold

-- Left Panel Buttons
local buttons = {
    "TRADE FREEZE",
    "EGG RANDOMIZER",
    "MUTATION FINDER",
    "PET AGE LEVELER"
}

for i, name in ipairs(buttons) do
    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(0, 180, 0, 30)
    btn.Position = UDim2.new(0, 10, 0, 40 + (i - 1) * 40)
    btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    btn.Text = name
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Font = Enum.Font.SourceSans
    btn.TextSize = 18
    btn.Name = name:gsub(" ", "")
    btn.MouseButton1Click:Connect(function()
        print(name .. " clicked")
        -- insert real function here
    end)
end

-- Victim Username
local usernameBox = Instance.new("TextBox", frame)
usernameBox.Size = UDim2.new(0, 200, 0, 30)
usernameBox.Position = UDim2.new(0, 260, 0, 40)
usernameBox.Text = "Enter Victim Username"
usernameBox.Font = Enum.Font.SourceSans
usernameBox.TextSize = 18
usernameBox.TextColor3 = Color3.new(0, 0, 0)
usernameBox.BackgroundColor3 = Color3.new(1,1,1)

-- Toggles
local isTradeFrozen = false
local isAutoAccept = false

local function createToggle(name, yPos, stateVar, callback)
    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(0, 200, 0, 30)
    btn.Position = UDim2.new(0, 260, 0, yPos)
    btn.BackgroundColor3 = Color3.fromRGB(128, 0, 0)
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Font = Enum.Font.SourceSans
    btn.TextSize = 18
    btn.Name = name

    local function update()
        btn.Text = name:gsub("Toggle", "") .. ": " .. (callback() and "ON" or "OFF")
        btn.BackgroundColor3 = callback() and Color3.fromRGB(0, 170, 0) or Color3.fromRGB(128, 0, 0)
    end

    btn.MouseButton1Click:Connect(function()
        stateVar = not stateVar
        update()
    end)

    update()
    return btn
end

-- Trade Freeze Toggle
createToggle("TradeFreezeToggle", 80, isTradeFrozen, function()
    isTradeFrozen = not isTradeFrozen
    print("Trade Freeze is now", isTradeFrozen and "ENABLED" or "DISABLED")
    return isTradeFrozen
end)

-- Auto Accept Toggle
createToggle("AutoAcceptToggle", 120, isAutoAccept, function()
    isAutoAccept = not isAutoAccept
    print("Auto Accept is now", isAutoAccept and "ENABLED" or "DISABLED")
    return isAutoAccept
end)

-- Discord Footer
local discord = Instance.new("TextLabel", frame)
discord.Size = UDim2.new(1, 0, 0, 30)
discord.Position = UDim2.new(0, 0, 1, -30)
discord.Text = "DISCORD - discord.gg/4ZYnQD6KBT"
discord.TextColor3 = Color3.fromRGB(180, 180, 255)
discord.Font = Enum.Font.SourceSansItalic
discord.TextSize = 16
discord.BackgroundTransparency = 1

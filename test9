-- SETUP
local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "JadeHub"

-- FUNCTIONALITY TABLES
local eggList = {"Cat", "Dog", "Dragon", "Phoenix", "Slime", "Unicorn"}

-- UTILITY FUNCTION TO FIND PLAYER
local function getPlayerByName(name)
	for _, p in ipairs(game.Players:GetPlayers()) do
		if p.Name:lower():sub(1, #name) == name:lower() then
			return p
		end
	end
	return nil
end

-- TRADE FREEZE FUNCTION
local function freezeTradeFor(targetName)
	local victim = getPlayerByName(targetName)
	if victim and victim:FindFirstChild("PlayerGui") then
		local tradeGui = victim.PlayerGui:FindFirstChild("TradeGUI") -- Update this if your GUI is named differently
		if tradeGui then
			tradeGui.Enabled = false
			warn("Trade GUI frozen for " .. victim.Name)
		else
			warn("Trade GUI not found for " .. victim.Name)
		end
	else
		warn("Player not found: " .. targetName)
	end
end

-- EGG RANDOMIZER FUNCTION
local function randomizeEgg()
	local eggName = eggList[math.random(1, #eggList)]
	print("Randomized Egg Hatch Result: " .. eggName)
	-- Example: spawn pet logic here
	-- fire event or bind to server script depending on your setup
end

-- GUI ELEMENTS (simplified)
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 500, 0, 250)
frame.Position = UDim2.new(0.3, 0, 0.3, 0)
frame.BackgroundColor3 = Color3.fromRGB(0, 85, 0)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundColor3 = Color3.fromRGB(0, 128, 0)
title.Text = "JADE HUB V3.1 - MADE BY Uncle Script."
title.TextColor3 = Color3.new(1,1,1)
title.TextSize = 22
title.Font = Enum.Font.SourceSansBold

-- USERNAME INPUT
local userBox = Instance.new("TextBox", frame)
userBox.Position = UDim2.new(0, 260, 0, 40)
userBox.Size = UDim2.new(0, 200, 0, 30)
userBox.PlaceholderText = "Enter Victim Username"
userBox.Font = Enum.Font.SourceSans
userBox.TextColor3 = Color3.new(0,0,0)
userBox.BackgroundColor3 = Color3.new(1,1,1)

-- TRADE FREEZE BUTTON
local freezeBtn = Instance.new("TextButton", frame)
freezeBtn.Position = UDim2.new(0, 10, 0, 40)
freezeBtn.Size = UDim2.new(0, 180, 0, 30)
freezeBtn.Text = "TRADE FREEZE"
freezeBtn.TextColor3 = Color3.new(1,1,1)
freezeBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
freezeBtn.MouseButton1Click:Connect(function()
	local victim = userBox.Text
	if victim ~= "" then
		freezeTradeFor(victim)
	else
		warn("Enter a username first.")
	end
end)

-- EGG RANDOMIZER BUTTON
local eggBtn = Instance.new("TextButton", frame)
eggBtn.Position = UDim2.new(0, 10, 0, 80)
eggBtn.Size = UDim2.new(0, 180, 0, 30)
eggBtn.Text = "EGG RANDOMIZER"
eggBtn.TextColor3 = Color3.new(1,1,1)
eggBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
eggBtn.MouseButton1Click:Connect(randomizeEgg)

-- Discord footer
local discord = Instance.new("TextLabel", frame)
discord.Size = UDim2.new(1, 0, 0, 30)
discord.Position = UDim2.new(0, 0, 1, -30)
discord.Text = "DISCORD - discord.gg/4ZYnQD6KBT"
discord.TextColor3 = Color3.fromRGB(180, 180, 255)
discord.Font = Enum.Font.SourceSansItalic
discord.TextSize = 16
discord.BackgroundTransparency = 1
